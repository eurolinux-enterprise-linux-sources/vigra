curdir=$(vigra_testdir)/utilities

test: test.o
	$(CXX) -o test test.o
	./test || { rm ./test$(EXEEXT) ; exit 1; }

image.exe: test.d
	devenv "..\test.sln" /build Release /project utilities
	./utilities.exe || { rm ./utilities.exe ; exit 1; }

ifneq "$(MAKECMDGOALS)" "clean"
include test.d
endif

EXTRA_CLEAN_TARGET=

include ../Makefile.include
